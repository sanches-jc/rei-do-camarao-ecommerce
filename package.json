{
  "name": "rei-do-camarao-ecommerce",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml,toml}": [
      "biome format --write",
      "git add --update"
    ],
    "components/**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml,toml}": [
      "biome format --write",
      "git add --update"
    ],
    "tests/**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml,toml}": [
      "biome format --write",
      "git add --update"
    ],
    "package.json": [
      "biome format --write",
      "git add --update"
    ]
  },
  "dependencies": {
    "next": "15.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitest/coverage-istanbul": "^3.2.4",
    "c8": "^8.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
